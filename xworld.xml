<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="xworld" _label="XWorld">
    <command arg="-root" />

    <hgroup>
        <vgroup>
            <string id="water"
                    arg="-water-col %"
                    _label="Water colour: " />
            <string id="grass"
                    arg="-grass-col %"
                    _label="Grass colour: " />
            <string id="sand"
                    arg="-sand-col %"
                    _label="Sand colour: " />
            <string id="mtn"
                    arg="-mtn-col %"
                    _label="Mountain colour: " />
            <string id="peak"
                    arg="-peak-col %"
                    _label="Peak colour: " />
        </vgroup>
        <vgroup>
            <number id="watermax"
                    type="spinbutton"
                    arg="-water-max %"
                    _label="Water threshold: "
                    low="0"
                    high="100"
                    default="30" />
            <number id="sandmax"
                    type="spinbutton"
                    arg="-sand-max %"
                    _label="Sand threshold: "
                    low="0"
                    high="100"
                    default="35" />
            <number id="grassmax"
                    type="spinbutton"
                    arg="-grass-max %"
                    _label="Grass threshold: "
                    low="0"
                    high="100"
                    default="70" />
            <number id="mtnmax"
                    type="spinbutton"
                    arg="-mtn-max %"
                    _label="Mountain threshold: "
                    low="0"
                    high="100"
                    default="85" />
        </vgroup>
        <vgroup>
            <number id="delay"
                    type="spinbutton"
                    arg="-delay %"
                    _label="Delay between worlds: "
                    low="0"
                    high="10000000"
                    default="3000000" />
            <string id="gridstep"
                    arg="-grid-step %"
                    _label="Noise grid step: " />
        </vgroup>
    </hgroup>

    <xscreensaver-updater />

    <_description>
Displays random worlds generated using perlin noise.

Created by Samuel Sleight, 2014.
    </_description>
</screensaver>
